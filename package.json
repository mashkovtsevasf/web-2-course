{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "Sofia Mashkovtseva",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "compile": "sass src/scss/main.scss dist/css/main.css",
    "build": "sass src/scss/main.scss dist/css/main.css",
    "dev": "npm run lint || true && npm run compile && concurrently \"sass --watch src/scss/main.scss:dist/css/main.css\" \"http-server . -p 5050 -o\"",
    "start": "http-server . -p 5050 -o",
    "server": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "start:all": "npm run compile && concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run server\" \"npm run start\"",
    "dev:all": "npm run compile && concurrently -n \"BACKEND,FRONTEND,SASS\" -c \"blue,green,yellow\" \"nodemon server/index.js\" \"http-server . -p 5050 -o\" \"sass --watch src/scss/main.scss:dist/css/main.css\"",
    "lint": "eslint src/js/**/*.js && stylelint src/scss/**/*.scss",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.11",
    "sass": "^1.69.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0"
  }
}
